<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lecturers</title>
  <style>
    table, th, td {
      border: 1px solid black;
    }
  </style>
</head>
<body>
  <a href="/">Home</a>
  <h1>Lecturers</h1>

  <!-- Display error message if any -->
  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } %>

  <!-- Sorting links -->
  <a href="/lecturers?sort=_id&order=asc">Sort by Lecturer ID Ascending</a>
  <a href="/lecturers?sort=_id&order=desc">Sort by Lecturer ID Descending</a>
  <a href="/lecturers?sort=did&order=asc">Sort by Department ID Ascending</a>
  <a href="/lecturers?sort=did&order=desc">Sort by Department ID Descending</a>

  <table>
    <thead>
      <tr>
        <th>Lecturer ID</th>
        <th>Name</th>
        <th>Department ID</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% lecturers.forEach((lecturer) => { %>
        <tr>
          <td><%= lecturer._id %></td>
          <td><%= lecturer.name %></td>
          <td><%= lecturer.did %></td>
          <td><a href="/lecturers/delete/<%= lecturer._id %>">Delete</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
